{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-add-contact-to-selection")) %}

<h1>{{ translate("txt-add-contact-to-selection") }} </h1>


{% do form.prepare() %}
{{ form().openTag(form)|raw }}

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-contact") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ contactLink(contact, 'view-admin', 'name') }} {{ selectionLink(selection, 'edit', 'icon') }}</p>
    </div>
</div>


{{ ztbformelement(form.get('selection')) }}


<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}