{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-selection-list")) %}

{{ form().closeTag()|raw }}

{% do form.prepare() %}

{{ form().openTag(form)|raw }}

{% set filter = form.get('filter') %}

<input type="hidden" name="filter[order]" value="{{ order }}">
<input type="hidden" name="filter[direction]" value="{{ direction }}">

<div class="row">

    <div class="col-md-9">

        <h1 class="display-4">{{ translate("txt-selection-list") }} {{ selectionLink(null,'new', 'button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-selection-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <div class="input-group-append">
                        {{ formelement(form.get('submit')) }}
                    </div>
                </div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-condensed table-sm">
                <thead>
                <tr>
                    <th>{% include 'contact/partial/sortable-table-header' with {'route': 'zfcadmin/selection/list', 'criteria': 'name', 'text': translate('txt-name')} %}</th>
                    <th>{% include 'contact/partial/sortable-table-header' with {'route': 'zfcadmin/selection/list', 'criteria': 'owner', 'text': translate('txt-owner')} %}</th>
                    <th>{% include 'contact/partial/sortable-table-header' with {'route': 'zfcadmin/selection/list', 'criteria': 'core', 'text': translate('txt-core')} %}</th>
                    <th>{{ translate("txt-contacts") }}</th>
                    <th>{% include 'contact/partial/sortable-table-header' with {'route': 'zfcadmin/selection/list', 'criteria': 'date', 'text': translate('txt-date')} %}</th>
                </tr>
                </thead>
                <tfoot>
                </tfoot>
                <tbody>
                {% for selection in paginator.getCurrentItems() %}
                    <tr {% if selection.dateDeleted %}class="danger"{% endif %}>
                        <td>
                            {% if selection.dateDeleted %}
                                <i class="fa fa-trash" title="{{ selection.dateDeleted|string_date }}"></i>
                            {% endif %}

                            {{ selectionLink(selection,'view', 'name') }} {{ selectionLink(selection,'edit', 'icon') }}
                        </td>
                        <td>{{ translate(selection.getCore(true)) }}</td>
                        <td>{{ contactLink(selection.contact,'view-admin','initials') }}</td>
                        <td>{{ selectionService.getAmountOfContacts(selection) }}{% if selectionService.isSql(selection) %}
                                <i class="fa fa-code fa-help" aria-hidden="true"
                                   title="{{ translate("txt-selection-is-sql") }}"></i>
                            {% endif %}</td>
                        <td>{{ selection.dateCreated|string_date }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'contact/partial/pagination-control' with {'paginator': paginator} %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-selections-found"))|raw }}
        {% endif %}
    </div>
    <div class="col-md-3">
        <div class="well well-sm">
            <fieldset>

                {{ ztbformelement(filter.get('includeDeleted')) }}
                {{ ztbformelement(filter.get('core')) }}
                {{ ztbformelement(filter.get('tags')) }}

                <div class="form-group row">
                    {{ ztbformelement(form.get('submit')) }}
                    {{ ztbformelement(form.get('clear')) }}
                </div>
            </fieldset>
        </div>
    </div>
</div>

{{ form().closeTag()|raw }}



