<h1>{{ translate("txt-area2-list-title") }}</h1>
<p class="lead">{{ translate("txt-area2-list-explanation") }} {{ area2Link(null,'new','button') }}</p>

{% if area2s|length > 0 %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ translate("txt-name") }}</th>
            <th>{{ translate("txt-label") }}</th>
            <th>{{ translate("txt-amount-of-equipment") }}</th>
        </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
        {% for area2 in area2s %}
            <tr>
                <td>
                    {{ area2Link(area2, 'view', 'name') }}
                    {{ area2Link(area2, 'edit', 'icon') }}
                </td>
                <td>{{ area2Link(area2, 'view', 'label') }}</td>
                <td>{{ area2.equipment.count }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert.info(translate("txt-no-area2s-found"))|raw }}
{% endif %}
