<h1>{{ translate("txt-contact-view-title-%s")|format(contact) }}</h1>
<p class="lead">{{ translate("txt-contact-view-explanation") }} {{ contactLink(contact,'edit','button') }}</p>
<dl class="dl-horizontal">
    <dt>{{ translate("txt-contact-name") }}</dt>
    <dd>{{ contact.name }}</dd>
    <dt>{{ translate("txt-telephone") }}</dt>
    <dd>{{ contact.telephone|default(translate("txt-not-given")) }}</dd>
    <dt>{{ translate("txt-label-(roomnumber)") }}</dt>
    <dd>{{ contact.label }}</dd>
    <dt>{{ translate("txt-contact-responsible") }}</dt>
    <dd>{{ contact.user|default(translate("txt-not-given")) }}</dd>
</dl>


<div class="tabbable">
    <ul class="nav nav-tabs">
        {% if contact.has('equipment') %}
            <li><a href="#equipment" data-toggle="tab">{{ translate("txt-equipment") }}</a></li>
        {% endif %}
    </ul>


    <div class="tab-content">
        {% if contact.has('equipment') %}
            <div class="boundary tab-pane" id="equipment">
                {% if contact.equipment.count > 0 %}
                    <ul>
                        {% for equipment in contact.equipment %}
                            <li>
                                {{ equipmentIcon(equipment,'activeInMES') }}
                                {{ equipmentIcon(equipment,'status') }}
                                {{ equipmentLink(equipment,'view','name') }}
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ ztblabel().info(translate("txt-no-equipment-available-on-this-contact"))|raw }}
                {% endif %}
            </div>
        {% endif %}
    </div>
    <hr/>
</div>
