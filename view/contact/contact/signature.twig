{% set contactService = contactServiceProxy(zfcUserIdentity()) %}

{% do headTitle().append(translate("txt-profile")) %}
{% do headTitle().append(contactService.parseFullname()) %}

<h1 class="home">{{ translate("txt-hello-%s")|format(zfcUserDisplayName()) }}</h1>

<ul id="tab" class="nav nav-tabs">
    <li><a href="{{ url('community/contact/profile/view') }}#profile">{{ translate("txt-profile")|capitalize }}</a></li>
    <li>
        <a href="{{ url('community/contact/profile/view') }}#organisation">{{ translate("txt-organisation")|capitalize }}</a>
    </li>
    <li><a href="{{ url('community/contact/profile/view') }}#event">{{ translate("txt-events")|capitalize }}</a></li>
    <li><a href="{{ url('community/contact/profile/view') }}#updates">{{ translate("txt-updates")|capitalize }}</a></li>
    {% if isAllowed('zfcadmin', 'index') %}
        <li class="active"><a
                    href="{{ url('community/contact/signature') }}">{{ translate("txt-signature")|capitalize }}</a>
        </li>
    {% endif %}
</ul>

<div id="tabContent" class="tab-content">


    <div class="tab-pane fade in active" id="profile">
        <h1 class="home">{{ translate("txt-signature") }}</h1>

        <p>
            Copy the HTML content of the signature below and save this at the following location (Windows 8.1)
            <code>C:\Users\%username%\AppData\Roaming\Microsoft\Signatures\itea.htm</code>

            In Outlook go to File > Option > Mail > Signatures and set "Signature" as your default for new messages and
            replies
        </p>


        <h2>{{ translate("txt-source") }}</h2>

        <form role="form">
            <div class="form-group">
                <textarea rows="30">{% include 'contact/partial/signature' %}</textarea>
            </div>
        </form>


        <style type="text/css">
            textarea {
                width: 100%;
                font-family: Courier, monospace;
            }
        </style>
    </div>
</div>