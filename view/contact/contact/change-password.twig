{% if zfcUserIdentity().saltedPassword %}
    <h1>{{ translate("txt-change-password") }}</h1>
    {% do headTitle().append(translate("txt-change-password")) %}
    <p class="lead">{{ translate("txt-change-explanation") }}</p>
{% else %}
    <h1>{{ translate("txt-set-password") }}</h1>
    {% do headTitle().append(translate("txt-set-password")) %}
    <p class="lead">{{ translate("txt-set-password-explanation") }}</p>
{% endif %}


{% do form.prepare() %}
{% do form.setAttribute('method', 'post') %}
{% do form.setAttribute('class', 'form-horizontal') %}

{% do form.get('submit').setAttribute('class','btn btn-primary') %}

{{ form().openTag(form)|raw }}

{{ ztbformelement(form.get('password')) }}
{{ ztbformelement(form.get('passwordVerify')) }}


<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
