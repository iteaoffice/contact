{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-facebook-list")) %}

<h1>{{ translate("txt-facebook-list") }}</h1>

{% if facebook|length > 0 %}
    <table class="table table-hover table-striped table-condensed">
        <thead>
        <tr>
            <th>{{ translate("txt-name") }}</th>
            <th>{{ translate("txt-public") }}</th>
            <th>{{ translate("txt-from-clause") }}</th>
            <th>{{ translate("txt-where-clause") }}</th>
            <th>{{ translate("txt-order-by-clause") }}</th>
            <th>{{ translate("txt-contact-key") }}</th>
        </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
        {% for facebook in facebook %}
            <tr>
                <td>{{ facebookLink(facebook,'view-admin', 'name') }} {{ facebookLink(facebook,'edit', 'icon') }}</td>
                <td>{{ translate(facebook.getPublic(true)) }}</td>
                <td><samp>{{ facebook.fromClause }}</samp></td>
                <td><samp>{{ facebook.whereClause }}</samp></td>
                <td><samp>{{ facebook.orderbyClause }}</samp></td>
                <td><samp>{{ facebook.contactKey }}</samp></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert().info(translate("txt-no-facebooks-found"))|raw }}
{% endif %}

{{ facebookLink(null,'new', 'button') }}
