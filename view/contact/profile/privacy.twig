{% do headTitle().append(translate("txt-profile")) %}
{% do headTitle().append(contact.parseFullName()) %}
{% do headTitle().append(translate("txt-events")) %}

<h1 class="home">{{ translate("txt-hello-%s")|format(zfcUserDisplayName()) }}</h1>

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item"><a class="nav-link"
                            href="{{ url('community/contact/profile/view') }}">{{ translate("txt-profile")|capitalize }}</a>
    </li>
    <li class="nav-item"><a class="nav-link"
                            href="{{ url('community/contact/profile/organisation') }}">{{ translate("txt-organisation")|capitalize }}
            {% if not contact.contactOrganisation %}
                <i class="text-danger fa fa-exclamation-triangle" aria-hidden="true"></i>
            {% endif %}</a></li>
    <li class="nav-item"><a class="nav-link"
                            href="{{ url('community/contact/profile/events') }}">{{ translate("txt-events")|capitalize }}</a>
    </li>
    <li class="nav-item active"><a class="nav-link active"
                                   href="{{ url('community/contact/profile/privacy') }}">{{ translate("txt-privacy")|capitalize }}</a>
    </li>
</ul>

<h2>{{ translate("txt-opt-in-subscriptions") }}</h2>

<p>{{ translate("txt-opt-in-subscriptions-explanation") }}</p>


{% if optIns|length > 0 %}
    <form method="post" action="">
        <table class="table table-hover table-condensed table-striped">
            <thead>
            <tr>
                <th>{{ translate("txt-opt-in") }}</th>
                <th>{{ translate("txt-description") }}</th>
                <th>{{ translate("txt-subscription") }}</th>
            </tr>
            </thead>
            <tbody>
            {% for optIn in optIns %}
                <tr>
                    <td>{{ optIn.optIn }}</td>
                    <td>{{ optIn.description }}</td>
                    <td><input type="checkbox" name="optIn[]" value="{{ optIn.id }}"
                               {% for contactOptIn in identity().optIn if optIn.id == contactOptIn.id %}checked="checked"{% endfor %}
                        ></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="2"></td>
                <td><input type="submit" value="{{ translate("txt-update-opt-in") }}" class="btn btn-primary btn-sm">
                </td>
            </tr>
            </tfoot>

        </table>
    </form>
{% endif %}
