{% do headTitle().append(translate("txt-profile")) %}
{% do headTitle().append(contact.parseFullName()) %}

<h1>{{ translate("txt-hello-%s")|format(identity().parseFullName()) }}</h1>

{{ organisationUpdateNotification(contact.contactOrganisation.organisation) }}

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link"
           href="{{ url('community/contact/profile/view') }}">{{ translate("txt-general")|capitalize }}</a>
    </li>
    <li class="nav-item"><a class="nav-link"
                            href="{{ url('community/contact/profile/my') }}">{{ translate("txt-my-public-profile")|capitalize }}</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link active"
           href="{{ url('community/contact/profile/organisation') }}">{{ translate("txt-organisation")|capitalize }}
            {% if not contact.contactOrganisation %}
                <i class="text-danger fas fa-exclamation-triangle"></i>
            {% endif %}</a>
    </li>

    <li class="nav-item">
        <a class="nav-link"
           href="{{ url('community/contact/profile/events') }}">{{ translate("txt-events")|capitalize }}</a>
    </li>
    <li class="nav-item">
        <a class="nav-link"
           href="{{ url('community/contact/profile/privacy') }}">{{ translate("txt-privacy-settings")|capitalize }}</a>
    </li>
</ul>


<h2>{{ translate("txt-organisation") }}</h2>
{% if contact.hasOrganisation() %}
    <div class="row">
        <div class="col-md-9">
            <dl class="dl-horizontal">
                <dt>{{ translate("txt-organisation") }}</dt>
                <dd>{{ contactService.parseOrganisation(contact) }}</dd>
                <dt>{{ translate("txt-website") }}</dt>
                <dd>
                    {% for web in contact.contactOrganisation.organisation.web|filter(web => web.isMain()) -%}
                        <a href="{{ web }}">{{ web }}</a><br>
                    {% else %}
                        {{ translate("txt-no-website-provided") }}
                    {% endfor %}
                </dd>
                <dt>{{ translate("txt-organisation-type") }}</dt>
                <dd>{{ contact.contactOrganisation.organisation.type.description }}</dd>
                <dt>{{ translate("txt-country") }}</dt>
                <dd>{{ contact.contactOrganisation.organisation.country }}</dd>
                <dt>{{ translate("txt-organisation-description") }}</dt>
                {% if contact.contactOrganisation.organisation.description.description %}
                    <dd>{{ contact.contactOrganisation.organisation.description.description|raw }}</dd>
                {% else %}
                    <dd>{{ translate("txt-no-organisation-description-provided") }}</dd>
                {% endif %}
            </dl>
        </div>
        <div class="col-md-3">
            {% if contact.contactOrganisation.organisation.logo|length > 0 %}
                {{ organisationLogo(contact.contactOrganisation.organisation, 300) }}
            {% endif %}
        </div>
    </div>
{% else %}
    {{ ztbalert().danger(translate("txt-no-organisation-found-complete-your-profile-to-participate-in-projects"))|raw }}
{% endif %}

{{ organisationUpdateLink(null, 'edit', 'button', contact.contactOrganisation.organisation) }}