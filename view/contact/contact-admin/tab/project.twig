<h2>{{ translate("txt-projects") }}</h2>

{% if projects|length > 0 %}
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>{{ translate("txt-project") }}</th>
            <th>{{ translate("txt-status") }}</th>
            <th>{{ translate("txt-roles") }}</th>
        </tr>
        </thead>
        <tbody>
        {% for projectId, roles in projects %}
            <tr>
                {% set projectService = projectService.setProjectId(projectId) %}
                <td>{{ projectLink(projectService,'view-admin','name') }}</td>
                <td>{{ projectService.parseStatus() }}</td>
                <td>{% for role in roles %}{{ role }}{% if not loop.last %} &middot; {% endif %}{% endfor %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert().info(translate("txt-contact-is-not-active-in-a-project"))|raw }}
{% endif %}