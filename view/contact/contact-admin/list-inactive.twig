{% do headTitle().append(translate("txt-inactive-contacts")) %}

<h1>{{ translate("txt-inactive-contacts") }}</h1>

{% if inactiveContacts|length > 0 %}
    <table class="table table-hover table-striped table-sm">
        <thead>
        <tr>
            <td>{{ translate("txt-nr") }}</td>
            <td>{{ translate("txt-contact-id") }}</td>
            <td>{{ translate("txt-email-name") }}</td>
            <td>{{ translate("txt-firstname") }}</td>
            <td>{{ translate("txt-middle-name") }}</td>
            <td>{{ translate("txt-last-name") }}</td>
        </tr>
        </thead>
        <tfoot>
        </tfoot>
        <tbody>
        {% for contact in inactiveContacts %}
            <tr>
                <td>{{ loop.index }}</td>
                <td><a href="{{ url('zfcadmin/contact/view/general',{'id':contact.id}) }}">{{ contact.id }}</a></td>
                <td>{{ contact.email }} <a href="mailto:{{ contact.email }}" title="{{ contact.email }}"><i
                                class="far fa-envelope"></i> </a></td>
                <td>{{ contact.firstName }}</td>
                <td>{{ contact.middleName }}</td>
                <td>{{ contact.lastName }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ lbs5alert().info(translate("txt-no-inactive-contacts-could-be-found"))|raw }}
{% endif %}