{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-contact") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ contactLink(contact,'view-admin', 'name') }}</p>
    </div>
</div>

{% set note = form.get('contact_entity_note') %}
{{ ztbformelement(note.get('source')) }}
{{ ztbformelement(note.get('note')) }}

{{ ztbformelement(form.get('csrf')) }}

<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
