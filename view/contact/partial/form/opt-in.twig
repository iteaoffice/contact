{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set optin = form.get('contact_entity_optin') %}
{{ ztbformelement(optin.get('id')) }}
{{ ztbformelement(optin.get('optIn')) }}
{{ ztbformelement(optin.get('active')) }}
{{ ztbformelement(optin.get('description')) }}

{{ ztbformelement(form.get('csrf')) }}

<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
