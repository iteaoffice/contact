{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}

{% set selection = form.get('selection') %}
{{ ztbformelement(selection.get('selection')) }}
{{ ztbformelement(selection.get('tag')) }}
{{ ztbformelement(selection.get('note')) }}
{{ contactformelement(selection.get('contact')) }}
{{ ztbformelement(selection.get('personal')) }}
{{ ztbformelement(selection.get('private')) }}

<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
