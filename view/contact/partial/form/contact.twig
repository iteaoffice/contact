{% do form.prepare() %}
{{ form().openTag(form)|raw }}

{% set contactFieldset = form.get('contact_entity_contact') %}

{{ formelement(contactFieldset.get('id')) }}

<fieldset>
    <legend>{{ translate("txt-contact-information") }}</legend>

    {{ ztbformelement(contactFieldset.get('firstName')) }}
    {{ ztbformelement(contactFieldset.get('middleName')) }}
    {{ ztbformelement(contactFieldset.get('lastName')) }}
    {{ ztbformelement(contactFieldset.get('email')) }}
    {{ ztbformelement(contactFieldset.get('gender')) }}
    {{ ztbformelement(contactFieldset.get('title')) }}
    {{ ztbformelement(contactFieldset.get('dateOfBirth')) }}
</fieldset>

<fieldset>
    <legend>{{ translate("txt-organisation-information") }}</legend>
    {{ organisationformelement(contactFieldset.get('organisation')) }}
    {{ ztbformelement(contactFieldset.get('branch')) }}
    {{ ztbformelement(contactFieldset.get('department')) }}
    {{ ztbformelement(contactFieldset.get('position')) }}
</fieldset>

{% if contact.id %}
    <fieldset>
        <legend>{{ translate("txt-photo") }}</legend>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">{{ translate("txt-current-photo") }}</label>

            <div class="col-sm-9">
                <p class="form-control-plaintext">{{ contactPhoto(contact, 400) }}</p>
            </div>
        </div>
    </fieldset>
{% endif %}

{{ ztbformelement(contactFieldset.get('file')) }}

<fieldset>
    <legend>{{ translate("txt-access-information") }}</legend>
    {{ accessformelement(contactFieldset.get('access')) }}
</fieldset>

{{ ztbformelement(form.get('csrf')) }}

<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ ztbformelement(form.get('delete')) }}
        {% endif %}
        {% if form.has('deactivate') %}
            {{ ztbformelement(form.get('deactivate')) }}
        {% endif %}
        {% if form.has('reactivate') %}
            {{ ztbformelement(form.get('reactivate')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
