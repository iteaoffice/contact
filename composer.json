{
  "name": "iteaoffice/contact",
  "type": "library",
  "license": "proprietary",
  "description": "Code to manage contact",
  "keywords": [
    "contact"
  ],
  "homepage": "https://itea3.org",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.itea4.org"
    }
  ],
  "authors": [
    {
      "name": "Johan van der Heide",
      "email": "johan.van.der.heide@itea3.org"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "^7.4",
    "laminas/laminas-mvc": "^3.1",
    "laminas/laminas-mvc-form": "^1.0.0",
    "laminas/laminas-math": "^3.1.1",
    "laminas/laminas-mvc-console": "^1.2.0",
    "laminas/laminas-mvc-plugins": "^1.0.1",
    "laminas/laminas-navigation": "^2.9.0",
    "jield-webdev/bjy-authorize": "^1.4.0",
    "doctrine/doctrine-orm-module": "@stable",
    "zf-commons/zfc-user": "^3.0.0",
    "laminas/laminas-dependency-plugin": "^0.2"
  },
  "require-dev": {
    "iteaoffice/testing": "2.*",
    "iteaoffice/general": "5.*",
    "iteaoffice/search": "2.*",
    "iteaoffice/affiliation": "5.*",
    "setasign/fpdi-tcpdf": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "Contact\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ContactTest\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "5.0-DEV",
      "dev-develop": "5.1-DEV"
    }
  },
  "scripts": {
    "check": [
      "@php-lint",
      "@phpstan",
      "@cs"
    ],
    "fix": [
      "@cbf",
      "@cs-fix"
    ],
    "php-lint": "./vendor/bin/parallel-lint src",
    "phpstan": "./vendor/bin/phpstan analyse src/ --level=1",
    "cs": "./vendor/bin/phpcs",
    "cbf": "./vendor/bin/phpcbf",
    "cs-fix": "./vendor/bin/php-cs-fixer fix -v src",
    "test": "./vendor/bin/phpunit"
  }
}
